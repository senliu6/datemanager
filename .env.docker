# Docker环境配置
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# 局域网访问配置
FRONTEND_URL=http://0.0.0.0:3001
API_BASE_URL=http://0.0.0.0:3001/api

# Docker内部数据库路径
DB_PATH=/app/server/data/datemanager.db

# 缓存配置
CACHE_TYPE=memory

# 文件上传配置
MAX_FILE_SIZE=100MB
UPLOAD_TEMP_DIR=/tmp/uploads

# 安全配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=10